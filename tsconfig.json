{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,

        "rootDir": "./src",
        "outDir": "./build",

        "baseUrl": "./src/renderer",
        "moduleResolution": "node",
        "paths": {
            "@stores/*": ["stores/*"],
            "@stores": ["stores"],
            "@components/*": ["components/*"],
            "@components": ["components"],
            "@actions/*": ["actions/*"],
            "@actions": ["actions"],
            "@containers/*": ["containers/*"],
            "@containers": ["containers"],
            "@reducers/*": ["reducers/*"],
            "@reducers": ["reducers"],
        }
    },
    "include": [
        "src/renderer",
        "src/main"
    ],
    "exclude": [
        "node_modules",
        "./build"
    ]
}
